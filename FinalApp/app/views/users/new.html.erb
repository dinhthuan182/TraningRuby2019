<h1 class="text-center text-primary"><b>Fakebook Signup</b></h1>

<%= form_with scope: :user, url: users_path, class:"formSignUp", local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="fSignUp">
      <b><%= form.label :first_name %></b>
      <%= form.text_field :fname, class:"form-control", id:"firstName", placeholder:"Enter first name" %><br>

      <b><%= form.label :last_name %></b>
      <%= form.text_field :lname, class:"form-control", id:"lastName", placeholder:"Enter lasr name" %><br>

      <b><%= form.label :email%></b>
      <%= form.text_field :email, class:"form-control", id:"email", placeholder:"Enter email" %><br>

      <b><%= form.label :password %></b>
      <%= form.password_field :password, class:"form-control", id:"password", placeholder:"Enter password"  %><br>

      <b><%= form.label :password_confirmation %></b>
      <%= form.password_field :password_confirmation, class:"form-control", id:"passwordC", placeholder:"Enter password confirmation" %><br>
    </div>
    <br>
      <div class="text-center mb-4">
        <%= form.submit "Signup", class:"btn btn-primary" %><br>
      </div>
<% end %>
