<section class="container-fluid">
    <!--Tab feeds va discover-->
    <div class="row">
      <%= render '/layouts/tab_feeds' %>
      <div class="col-md-8 bg-white">
        <div class="container">
          <div class="d-flex justify-content-between mt-3">
          <h2>Edit User Profile</h2>
          <%= link_to 'Cancel', users_path, class:"btn btn-primary" %>
        </div>
          <h2></h2>
          <hr>

          <%= form_with(model: @user, local: true) do |form| %>

            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2>
                  <%= pluralize(@user.errors.count, "error") %> prohibited
                  this user from being saved:
                </h2>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-5" style="  height: 210px;">
                <div class="input-file-container" style="display: block;">
                  <img class="rounded-lg" src="<%= @user.avatar %>" width="200px" height="200px" style="position: absolute; z-index: 0;" id="image" >
                  <input class="input-file" id="my-file" type="file" style="position: absolute; z-index: 1; margin-top: 160px;" onchange="showImage.call(this);">
                  <label tabindex="0" for="my-file" class="input-file-trigger">CHANGE</label>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-5">
                <h4 class="text-primary">Basic information</h4>
              </div>
            </div>
            <div class="form-group row">
              <label for="editFirstName" class="col-md-3 col-form-label d-flex justify-content-end"><b>First name</b></label>
              <div class="col-md-5">
              <%= form.text_field :fname, class:"form-control", id:"editFirstName", placeholder:"first name" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="editLastName" class="col-md-3 col-form-label d-flex justify-content-end"><b>Last name</b></label>
              <div class="col-md-5">
                <%= form.text_field :lname, class:"form-control", id:"editLastName", placeholder:"last name" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="editEmail" class="col-md-3 col-form-label d-flex justify-content-end"><b>Email</b></label>
              <div class="col-md-5">
                <%= form.text_field :email, class:"form-control", id:"editEmail", placeholder:"email" %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-5">
                <%= form.submit "Save", class:"btn btn-success" %>
              </div>
            </div>
            <br>


          <!--Changr password-->
          <form>
            <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-5">
                <h4 class="text-primary">Change password</h4>
              </div>
            </div>

            <div class="form-group row">
              <label for="currentPsw" class="col-md-3 col-form-label d-flex justify-content-end"><b>Current Password</b></label>
              <div class="col-md-5">
                <%= form.password_field :password, class:"form-control", id:"currentPsw", placeholder:"Enter Current password" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="newPsw" class="col-md-3 col-form-label d-flex justify-content-end"><b>New Password</b></label>
              <div class="col-md-5">
                <input type="password" name="pwd" class="form-control" id="newPsw" placeholder="Enter New password">
              </div>
            </div>
            <div class="form-group row">
              <label for="verifyPsw" class="col-md-3 col-form-label d-flex justify-content-end"><b>Verify Password</b></label>
              <div class="col-md-5">
                <input type="password" name="pwd" class="form-control" id="verifyPsw" placeholder="Verify password">
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-5">
                <%= form.submit "Save", class:"btn btn-success" %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
<% end %>




