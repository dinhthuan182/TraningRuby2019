<% provide(:title, "Đăng nhập") %>
<body class="conrainer">
  <!-- <div class="row"> -->
    <div class="loginForm">
        <%= form_for(:session, url: login_path) do |f| %>
        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: "alert #{name}" %>
        <% end -%>
        <div class="form-group mt-4">
          <h2><b>Fakebook Login</b></h2>
          <img src="/assets/logoLogin.png" alt="Avatar" class=" rounded-circle mt-2 img-responsive">
        </div>
        <div class="form-group">
          <div class="mt-5">
            <%= f.email_field :email, class: 'form-control', placeholder: "Enter username" %>
          </div>
          <div>
            <%= f.password_field :password, class: 'form-control', placeholder:"Enter password" %>
          </div>
            <%= f.submit "Log in", class: "btn btn-primary mt-5" %>
          <div class="mt-5">
            <a href="">Fogot password?</a>
          </div>
        </div>
      <% end %>
    </div>
    <div class="newAccount">
      <%= link_to 'Create an account', new_user_path %>
    </div>
  </div>
</body>


