  <section class="container-fluid">
    <!--modal photo-->
    <div class="modal fade" id="mobalPhoto">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
              <!-- Modal Header -->
              <div class="modal-header">
                  <h4><b>Title</b></h4>
                  <button type="button" class="close" data-dismiss="modal">×</button>
                </div>

              <!-- Modal body -->
                <div class="modal-body">
                  <img class="rounded-sm w-100 h-100" src="../images/img1.jpeg">
                </div>

              <!-- Modal footer -->
                <div class="modal-header">
                  <p>Description: di choi voi ban be, ngam canh thien nhien</p>
                </div>
            </div>
         </div>
    </div>
    <!--end modal Photo-->

    <!--modal Album-->
    <div class="modal fade" id="modalAlbum">
        <div class="modal-dialog modal-xl">
          <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4><b>Title</b></h4>
              <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              <div id="showAlbum" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ul class="carousel-indicators">
                  <li data-target="#showAlbum" data-slide-to="0" class="active"></li>
                  <li data-target="#showAlbum" data-slide-to="1"></li>
                  <li data-target="#showAlbum" data-slide-to="2"></li>
                </ul>
                <!-- The slideshow -->
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="w-100 h-100" src="../images/img1.jpeg" alt="Los Angeles">
                  </div>
                    <div class="carousel-item">
                      <img class="w-100 h-100" src="../images/img1.jpeg" alt="Chicago">
                    </div>
                  <div class="carousel-item">
                    <img class="w-100 h-100" src="../images/img1.jpeg" alt="New York">
                  </div>
                </div>
                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#showAlbum" data-slide="prev">
                  <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#showAlbum" data-slide="next">
                  <span class="carousel-control-next-icon"></span>
                </a>
              </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-header">
              <p>Description: di choi voi ban be, ngam canh thien nhien</p>
            </div>
          </div>
       </div>
    </div>
    <!--end modal Album-->
    <!--Tab feeds va discover-->
    <div class="row">
      <%= render '/layouts/tab_feeds' %>

      <article class="tab-content col-md-10 p-0 mt-5" >
         <div class="col-sm-8 col-lg-9" style="background-color: white">
            <div class="container">
              <div class="row">
                <div class="col-12">
                  <h3 class="pt-4">New Photo</h3>
                  <hr>
                </div>
              </div>
              <%= form_with scope: :photo, url: photos_path, local: true do |form| %>
              <% if @photo.errors.any? %>
                <div id="error_explanation">
                  <h2>
                    <%= pluralize(@photo.errors.count, "error") %> prohibited
                    this photo from being saved:
                  </h2>
                  <ul>
                    <% @photo.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                  <div class="col-12 col-lg-6">
                    <div class="form-group">
                      <label>Title</label>
                      <%= form.text_field :title, class:"form-control", placeholder:"Enter photo title" %>
                    </div>

                    <div class="form-group w-50">
                      <label>Sharing Mode</label>
                      <select class="form-control">
                        <option selected>Public</option>
                        <option>Private</option>
                      </select>
                    </div>

                  </div>

                  <div class=" col-12 col-lg-6">
                    <div class="form-group">
                      <label>Desription</label>
                      <%= form.text_area :description, class:"form-control",rows:"6", placeholder:"Enter description" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col images">
                    <div class="upload-btn-wrapper float-left sizeMyPhotos">
                      <button class="btnUpload"><img src="/assets/plus4.png"></button>
                      <input class="btnUpload" type="file" onchange="showImagePhoto.call(this)"/>
                    </div>
                  </div>
                </div>

                <div class="row mt-5 m-1">
                  <%= form.submit "Save", class:"btn btnSubmit mr-2" %>
                </div>
              <% end %>
            </div>
      </article>

    </div>
  </section>
